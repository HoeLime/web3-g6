{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./frontend/dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src"]
  },
  "include": ["frontend/src/**/*", "src/global.d.ts"],
  "exclude": ["node_modules", "frontend/dist"]
}